
<%= simple_form_for [@loan, @loan_detail] do |f| %>
  <%= f.error_notification %>

  
    
    <div class="field">
      <%= f.label :employee_id, "Empleado: "%><br />
      <%= f.collection_select :employee_id, @employee, :id, :full_name, :prompt => true %>
    </div>
    
    <div class="field">
      <%= f.label :valor_id, "Valor:*"%><br />
      <%= f.collection_select :valor_id, @valor , :id, :name , :prompt => true %>
    </div>
    
    
    
   <div class="field">
      <%= f.check_box :tm %>
      <%= f.label :tm ,"Descuento?", :class => "bold" %>
      <div class="small">
          Es un descuento ?
      </div>
    </div>
    <div class="field">
      <%= f.label :total, "Importe: *", :class => "bold" %><br />
      <%= f.text_field :total %>
    </div>
    
    <div class="field">
      <%= f.label :detalle, "Detalle*", :class => "bold" %><br />
      <%= f.text_field :detalle %>
    </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
