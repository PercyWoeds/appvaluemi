<p id="notice"><%= notice %></p>

<h1>Forma de pago </h1>

<table>
  <thead>
    <tr>
      <th>Descrip</th>
      <th>Comment</th>
      <th>Day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.descrip %></td>
        <td><%= payment.comment %></td>
        <td><%= payment.day %></td>
        <td><%= link_to 'Ver', payment %></td>
        <td><%= link_to 'Editar', edit_payment_path(payment) %></td>
        <td><%= link_to 'Eliminar', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Pago', new_payment_path %>
