<p id="notice"><%= notice %></p>

<h1>Listing Afps</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @afps.each do |afp| %>
      <tr>
        <td><%= afp.name %></td>
        <td><%= afp.company_id %></td>
        <td><%= link_to 'Show', afp %></td>
        <td><%= link_to 'Edit', edit_afp_path(afp) %></td>
        <td><%= link_to 'Destroy', afp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

