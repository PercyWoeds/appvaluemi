<p id="notice"><%= notice %></p>

<h1>Listing Faltantes</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Tipofaltante</th>
      <th>Descrip</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @faltantes.each do |faltante| %>
      <tr>
        <td><%= faltante.employee_id %></td>
        <td><%= faltante.tipofaltante_id %></td>
        <td><%= faltante.descrip %></td>
        <td><%= faltante.comments %></td>
        <td><%= link_to 'Show', faltante %></td>
        <td><%= link_to 'Edit', edit_faltante_path(faltante) %></td>
        <td><%= link_to 'Destroy', faltante, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

