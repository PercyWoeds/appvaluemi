<body class="white-bg" style="font-family:'Verdana'">
<table style="width: 100%">
<tbody><tr>
<td style="padding:30px;">
    <table width="100%" height="200px" border="0" aling="center" cellpadding="0" cellspacing="0">
        <tbody>
            <tr>
    
    
            </tr>
            <tr>
                <td valign="bottom">
    
                    <table width="100%" height="100%" border="0" border-radius="" cellpadding="9" cellspacing="0">
                        <tbody>
                            
                            <tr>
    
                                <td align="center">
                                    <strong>
                                        <span style="font-size:15px"><%= @invoice.company.name %></span>
                                    </strong>
                                    <br>
                                    <strong>
                                        <span style="font-size:15px" text-align="center">R.U.C.: <%= @invoice.company.ruc %></span>
                                    </strong>
                                    <br>
                                    <strong>Dirección : </strong><%= @invoice.company.address1%>
                                    <br>
    
                                <% if @invoice.document_id == 1 %>
                                    <span style="font-family:Tahoma, Geneva, sans-serif; font-size:20px" text-align="center">F A C T U R A</span>
                                <% end    %>
                                <% if @invoice.document_id == 3 %>
                                <span style="font-family:Tahoma, Geneva, sans-serif; font-size:20px" text-align="center">B O  L E T A </span>
                                <% end    %>
                                    <br>
                                    <span style="font-family:Tahoma, Geneva, sans-serif; font-size:19px" text-align="center">E L E C T R Ó N I C A</span>
                                </td>
                            </tr>
                            <tr>
                                <td align="center">
                                    No.:
                                    <span><%= @invoice.code %></span>
                                </td>
                            </tr>
    
                            <tr>
                                <td width="60%" height="15" align="left">
                                    
                                    <% if @invoice.document_id == 1 %>
                                        <strong>Razón Social:</strong>&nbsp; <%= @invoice.customer.name %>
                                        <br>
                                        <strong>R.U.C.:</strong>&nbsp;  <%= @invoice.customer.ruc %>
                                        <br>
                                        <strong>Dirección: </strong>&nbsp;  <%= @invoice.customer.address1 %>
                                        <br>
                                    <% end %>
                                    
                                    <% if @invoice.document_id == 3 %>
                                        <strong>Cliente :</strong>&nbsp; <%= @invoice.customer.name%>
                                        <br>
                                    <% end %>
                                    
                                    <strong>Fecha Emisión: </strong>&nbsp; <%= @invoice.fecha.strftime("%d/%m/%Y") %> 
                                    <br>
                                    <strong>Tipo Moneda: </strong>&nbsp; SOL 
                                </td>
                            </tr>
                        </tbody>
                    </table>
    
                </td>
            </tr>
        </tbody>
    </table>
    
    <table width="96%" border="0" cellpadding="5" cellspacing="0">
        <tbody>
            <tr>
                <td align="center" class="bold">Cantidad</td>
                <!--<th align="center" class="bold">Unidad Medida</th>-->
                <td align="center" class="bold">Código</td>
                <td align="center" class="bold">Descripción</td>
                <td align="center" class="bold">Valor Unitario</td>
                <td align="center" class="bold">Precio Total</td>
            </tr>
            <% for product  in @invoice.get_products_2  %>
            
            <tr class="border_top">
                <td align="center">
                    <%= sprintf("%.2f",product.quantity) %> UND
                </td>
                <td align="center">
                    <%= product.code     %> 
                </td>
                <td align="center" width="300px">
                    <span><%= product.name %></span>
                    <br>
                </td>
                <td align="center">
                    <%= sprintf("%.2f",product.price)    %>
                </td>
                <td align="right">
                    <%= sprintf("%.2f",product.total)   %>
                </td>
            </tr>
            <% end %>
            
        </tbody>
    </table>
    <table width="100%" border="0" cellpadding="0" cellspacing="0">
        <tbody>
            <tr>
                <td width="50%" valign="top">
                    <table width="100%" border="0" cellpadding="5" cellspacing="0">
                        <tbody>
                            <tr class="border_top">
                                <td align="left">
                                    <strong>Op. Gravadas:</strong>
                                </td>
                                <td width="50" align="right">
                                    <span>S/.<%= money(@invoice.subtotal) %></span>
                                </td>
                            </tr>
                            <tr class="border_top">
                                <td align="left">
                                    <strong>Op. Inafectas:</strong>
                                </td>
                                <td width="50" align="right">
                                    <span>S/. 0.00</span>
                                </td>
                            </tr>
                            <tr class="border_top">
                                <td align="left">
                                    <strong>IGV:</strong>
                                </td>
                                <td width="250" align="right">
                                    <span>S/.<%= money(@invoice.tax) %></span>
                                </td>
                            </tr>
                            <tr class="border_top">
                                <td align="left">
                                    <strong>Total a Pagar:</strong>
                                </td>
                                <td width="250" align="right">
                                    <span id="ride-importeTotal" class="ride-totalPagar">S/.<%= money(@invoice.total) %></span>
                                </td>
                            </tr>
                            <!--Anticipos-->
                            <!--End Anticipos-->
                            <tr>
                                <td colspan="4">
                                    <br>
                                    <br>
                                    <span style="font-family:Tahoma, Geneva, sans-serif; font-size:12px" text-align="center">
                                        <strong> </strong>
                                    </span>
                                    <br>
                                    <br>
                                    <strong>Información Adicional</strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>
    
                    <table width="100%" border="0" cellpadding="5" cellspacing="0">
                        <tbody>
                            <tr class="border_top">
                                <td width="30%" style="font-size: 10px;">
                                    LEYENDA:
                                </td>
                                <td width="70%" style="font-size: 10px;">
    
                                </td>
                            </tr>
                            <tr class="border_top">
                                <td width="30%" style="font-size: 10px;">
                                    CONDICION DE PAGO:
                                </td>
                                <td width="70%" style="font-size: 10px;">
                                    CONTADO
                                </td>
                            </tr>
                            <tr class="border_top">
                                <td width="30%" style="font-size: 10px;">
                                    CAJERO :
                                </td>
                                <td width="70%" style="font-size: 10px;">
                                    <%= @invoice.user.first_name %>
                                </td>
                            </tr>
    
                        </tbody>
                    </table>
    
                </td>
    
            </tr>
        </tbody>
    </table>
    
    <br>
    <br>
    
                                
