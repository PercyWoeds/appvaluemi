    </div>
    
     <div class="field">
      
      <%= f.label :fecha, "Fecha *", :class => "bold" %><br />
      <%= f.date_field :fecha   %>
    </div>
    
    <div class="field">
      <%= f.label :onp, "O.N.P.", :class => "bold" %><br />
      <%= f.number_field :onp  %>
    </div>
    <div class="field">
      <%= f.label :sctr_1, "SCTR 1", :class => "bold" %><br />
      <%= f.number_field :sctr_1,  :step => 0.5 %>
    </div>
    <div class="field">
      <%= f.label :sctr_2, "SCTR 2", :class => "bold" %><br />
      <%= f.number_field :sctr_2,  :step => 0.5%>
