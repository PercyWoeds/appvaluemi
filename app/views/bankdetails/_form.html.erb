<%= simple_form_for(@bankdetail) do |f| %>
  

  <div class="form-inputs">
    
    <div class="field">
      <%= f.label :fecha, "Fecha Emision*", :class => "bold" %><br />
      <%= f.date_field :fecha %>
    </div>

    <div class="field">
      <%= f.label :bank_acount_id %><br />
      <%= f.select :bank_acount_id,options_from_collection_for_select(@bancos,'id','number')%>
      <div class="small">
       Moneda
      </div>
    </div>
    
    <div class="field">
      <%= f.label :saldo_inicial, "Saldo inicial ", :class => "bold" %><br />
      <%= f.number_field :saldo_inicial,:step => 0.1 %>
    </div>
    <div class="field">
      <%= f.label :total_cargo, "Total Cargo", :class => "bold" %><br />
      <%= f.number_field :total_cargo,:step => 0.1 %>
    </div>
    <div class="field">
      <%= f.label :total_abono, "Total Abono", :class => "bold" %><br />
      <%= f.number_field :total_abono,:step => 0.1 %>
    </div>
    
    <div class="field">
      <%= f.label :saldo_final, "Saldo Final ", :class => "bold" %><br />
      <%= f.number_field :saldo_final,:step => 0.1 %>
    </div>
    
  
  
    
  </div>

  <div class="form-actions">
    <%= f.hidden_field :company_id %>
    <%= f.button :submit %>
  </div>
<% end %>
