<p id="notice"><%= notice %></p>

<h1>Listing Vehiculos</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Placa</th>
      <th>Clase</th>
      <th>Marca</th>
      <th>Modelo</th>
      <th>Certificado</th>
      <th>Ejes</th>
      <th>Licencia</th>
      <th>Neumatico</th>
      <th>Config</th>
      <th>Carroceria</th>
      <th>Anio</th>
      <th>Estado</th>
      <th>Propio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trucks.each do |truck| %>
      <tr>
        <td><%= truck.code %></td>
        <td><%= truck.placa %></td>
        <td><%= truck.clase %></td>
        <td><%= truck.marca_id %></td>
        <td><%= truck.modelo_id %></td>
        <td><%= truck.certificado %></td>
        <td><%= truck.ejes %></td>
        <td><%= truck.licencia %></td>
        <td><%= truck.neumatico %></td>
        <td><%= truck.config %></td>
        <td><%= truck.carroceria %></td>
        <td><%= truck.anio %></td>
        <td><%= truck.estado %></td>
        <td><%= truck.propio %></td>
        <td><%= link_to 'Show', truck %></td>
        <td><%= link_to 'Edit', edit_truck_path(truck) %></td>
         <%if @current_user.level == 'admin' %>
        <td><%= link_to 'Destroy', truck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Vehiculo', new_truck_path %>


<%= form_tag import_trucks_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Importar " %>
<% end %>
