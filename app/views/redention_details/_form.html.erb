<%= simple_form_for(@redention_detail) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :factura_id %>
    <%= f.input :product_id %>
    <%= f.input :price %>
    <%= f.input :quantity %>
    <%= f.input :total %>
    <%= f.input :discount %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
