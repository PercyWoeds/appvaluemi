<div class="breadcrumbs">
  <%= link_to "My companies", "/companies" %> &raquo;
  <%= link_to @viatico.company.name, @viatico.company %> &raquo;
  <%= link_to "viaticos", "/companies/customer_payments/#{@viatico.company.id}" %>
</div>

<h1>
  <%= image_tag("invoice_48.png", :class => "vmiddle") %>
  <%= @viatico.identifier %>
</h1>

<%= hr() %>

<% if @viatico.location %>
  <p>
    <b>Location:</b>
    <%= link_to @viatico.location.name, @viatico.location %>
  </p>
<% end %>

<% if @viatico.division %>
  <p>
    <b>Division:</b>
    <%= link_to @viatico.division.name, @viatico.division %>
  </p>
<% end %>

<p>
  <b>Code:</b>
  <%= @viatico.code %>
</p>

<p>
    <b>Fecha entrega:</b>
    <%= @viatico.fecha1.strftime("%d/%m/%Y") %>   
</p>
 
<p>
    <b>Estado: </b>
    <%= @viatico.get_processed   %>   
</p>


<%= hr() %>

<h3>
  Informacion Pago
</h3>

<p>
  <b>Cuenta </b>  
  <%= link_to @viatico.bank_acount.number %>
</p>

<p>
  <b>Banco : </b>  
  <%=  @viatico.get_banco(@viatico.bank_acount.bank_id)   %>
</p>  

<b>Moneda : </b>  
  <%=  @viatico.get_moneda(@viatico.bank_acount.moneda_id)   %>
</p>


<%= hr() %>

<h3>
  Details
</h3>

<table>
  <thead>
    <tr>
      <th>
        Tipo  
      </th>
      <th>
        Documento
      </th>
      <th>    
        Operacion
      </th>
      <th>
        Factory  
      </th>
      <th>
        Ajuste 
      </th>

      <th>
        Total
      </th>

    </tr>
  </thead>
  <tbody>
      <tr>
        <td class="bordered_bottom bordered_right">
           <%=  @viatico.get_document (@viatico.document_id)     %>
        </td>
        
              
        <td class="bordered_bottom bordered_right">
          <%=  @viatico.documento     %>
        </td>

        <td class="bordered_bottom bordered_right">
          <%=  @viatico.nrooperacion  %>
        </td>
        
         <td class="bordered_bottom bordered_right">
          <%=  @viatico.operacion    %>
        </td>

          <td class="bordered_bottom bordered_right">
        
        </td>
        
        <td class="bordered_bottom bordered_right">
            <%=  @viatico.total     %>
        </td>

      </tr>
    

    <% for productItem in @viatico.get_payments() %>
      <tr>
        <td class="bordered_bottom bordered_right">
          
        </td>
        
              
        <td class="bordered_bottom bordered_right">
          <%=  productItem.code   %>
        </td>

        <td class="bordered_bottom bordered_right">
          <%=  productItem.get_customer(productItem.customer_id) %>
        </td>
        
         <td class="bordered_bottom bordered_right">
       <%=  productItem.factory   %>
        </td>
         <td class="bordered_bottom bordered_right">
       <%=  productItem.ajuste    %>
        </td>

        <td class="bordered_bottom bordered_right">
          <%= money(productItem.total) %>
        </td>

      </tr>
    <% end %>
    <tr>
      <td colspan="6" class="bordered_bottom bordered_right">
        &nbsp;
      </td>
    </tr>
    <tr>
      <td colspan="5" class="bordered_bottom bordered_right bold">
        Factory:
      </td>

      <td class="bordered_bottom bordered_right bold right">
        <%= money(@viatico.get_customer_payment_value("factory")) %>
      </td>

    </tr>
   
    <tr>
      <td colspan="5" class="bordered_bottom bordered_right bold">
        Compensaci√≥n:
      </td>

      <td class="bordered_bottom bordered_right bold right">
        <%= money(@viatico.get_customer_payment_value("compen")) %>
      </td>
      
    </tr>

    <tr>
      <td colspan="5" class="bordered_bottom bordered_right bold">
        Ajuste:
      </td>

      <td class="bordered_bottom bordered_right bold right">
        <%= money(@viatico.get_customer_payment_value("ajuste")) %>
      </td>
      
    </tr>
    <tr>
      <td colspan="5" class="bordered_bottom bordered_right bold">
        Total:
      </td>
      <td class="bordered_bottom bordered_right bold right">
         <%= money(@viatico.get_customer_payment_value("total") - @viatico.get_customer_payment_value("factory")+@viatico.get_customer_payment_value("compen")+ @viatico.get_customer_payment_value("ajuste")) %>
      </td>
    </tr>
    
    <tr>
      <td colspan="5" class="bordered_bottom bordered_right bold">
        Diferencia:
      </td>
      <td class="bordered_bottom bordered_right bold right">
        <%=money(@viatico.total+ @viatico.get_customer_payment_value("factory")-@viatico.get_customer_payment_value("compen")-@viatico.get_customer_payment_value("ajuste")- @viatico.get_customer_payment_value("total")) %>
      </td>
    </tr>
    
 

  </tbody>
</table>
<br />

<%= hr() %>


<br />


<p>
  <strong>Seller:</strong>
  <%= link_to @viatico.user.username, @viatico.user %>
</p>

<%= hr() %>

<div class="button">
  <%= link_to 'Exportar to PDF', "/customer_payments/pdf/#{@viatico.id}.pdf" %>  
  
 <% if @viatico.processed == "1" %> 

 <% %>

 <% else %>

  <%= link_to 'Procesar', "/customer_payments/do_process/#{@viatico.id}" %>

 <% end %> 
  
  <%= link_to 'Regresar', "/companies/customer_payments/#{@viatico.company.id}" %>
</div>

