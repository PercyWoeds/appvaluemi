<% if @compros.count > 0 %>
  <table>
    <thead>
      <tr>
        <th class="bordered_right bordered_bottom" style="width: 100px;">
          Factura
        </th>
        <th class="bordered_right bordered_bottom" style="width: 350px;">
          Cliente
        </th>
        <th class="bordered_right bordered_bottom">
          Total
          
        </th>
        <th class="bordered_right bordered_bottom">
          Fecha
        </th>
        <th class="bordered_right bordered_bottom">
          Procesado
        </th>
        <th class="bordered_right bordered_bottom" colspan="3">
          Opciones
        </th>
      </tr>
    </thead>
    <tbody>
    
      <% for compro in @compros %>
        <tr>
          <td class="bordered_right bordered_bottom">
            <%= link_to compro.numero, compro, :title => "Ir a factura" %>
          </td>
          <td class="bordered_right bordered_bottom">
            <%= compro.tranportorder.code  %>
          </td>
          <td class="bordered_right bordered_bottom right">
            <%= money(compro.importe) %>
          </td>
          <td class="bordered_right bordered_bottom">
            <%= compro.fecha %>
          </td>
          
        <td class="bordered_right">

          
          <%= link_to "Ver", compro %>
          
            <% if @current_user.level == "admin" %>
              <%= link_to "Edit", edit_compro_path(compro) %>         
              <%= link_to 'Eliminar', compro, :data=> {:confirm => 'Esta seguro ?'}, :method => :delete %>            
            <% end %>
          
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="error">
    We couldn't find any compros.
  </p>
<% end %>