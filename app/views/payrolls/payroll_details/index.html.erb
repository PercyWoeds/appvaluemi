<h1>Listing Payroll Details</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Remuneracion</th>
      <th>Calc1</th>
      <th>Calc2</th>
      <th>Calc3</th>
      <th>Total1</th>
      <th>Calc4</th>
      <th>Calc5</th>
      <th>Calc6</th>
      <th>Calc7</th>
      <th>Total2</th>
      <th>Remneta</th>
      <th>Calc8</th>
      <th>Calc9</th>
      <th>Calc10</th>
      <th>Total3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payroll_details.each do |payroll_detail| %>
      <tr>
        <td><%= payroll_detail.employee_id %></td>
        <td><%= payroll_detail.remuneracion %></td>
        <td><%= payroll_detail.calc1 %></td>
        <td><%= payroll_detail.calc2 %></td>
        <td><%= payroll_detail.calc3 %></td>
        <td><%= payroll_detail.total1 %></td>
        <td><%= payroll_detail.calc4 %></td>
        <td><%= payroll_detail.calc5 %></td>
        <td><%= payroll_detail.calc6 %></td>
        <td><%= payroll_detail.calc7 %></td>
        <td><%= payroll_detail.total2 %></td>
        <td><%= payroll_detail.remneta %></td>
        <td><%= payroll_detail.calc8 %></td>
        <td><%= payroll_detail.calc9 %></td>
        <td><%= payroll_detail.calc10 %></td>
        <td><%= payroll_detail.total3 %></td>
        <td><%= link_to 'Show', payroll_detail %></td>
        <td><%= link_to 'Edit', edit_payroll_detail_path(payroll_detail) %></td>
        <td><%= link_to 'Destroy', payroll_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

