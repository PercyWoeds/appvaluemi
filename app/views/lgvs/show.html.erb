<div class="breadcrumbs">
  <%= link_to "My companies", "/companies" %> &raquo;
  <%= link_to @lgv.company.name, @lgv.company %> &raquo;
  <%= link_to "lgvs", "/companies/customer_payments/#{@lgv.company.id}" %>
</div>

<h1>
  <%= image_tag("invoice_48.png", :class => "vmiddle") %>
  <%= @lgv.identifier %>
</h1>

<%= hr() %>

<% if @lgv.location %>
  <p>
    <b>Location:</b>
    <%= link_to @lgv.location.name, @lgv.location %>
  </p>
<% end %>

<% if @lgv.division %>
  <p>
    <b>Division:</b>
    <%= link_to @lgv.division.name, @lgv.division %>
  </p>
<% end %>

<p>
  <b>Code:</b>
  <%= @lgv.code %>
</p>

<p>
    <b>Fecha entrega:</b>
    <%= @lgv.fecha.strftime("%d/%m/%Y") %>   
</p>
 
<p>
    <b>Estado: </b>
    <%= @lgv.get_processed   %>   
</p>


<%= hr() %>

<h3>
  Informacion Pago
</h3>

<p>
  <b>Inicial </b>  
  <%= link_to @lgv.inicial %>
</p>

<p>
  <b>Ingreso: </b>  
  <%=  @lgv.total_ing   %>
</p>  

<b> _Egreso </b>  
  <%=  @lgv.total_egreso   %>
</p>

<b> Saldo </b>  
  <%=  @lgv.saldo   %>
</p>

<%= hr() %>

    <% for product in @lgv.get_lgvs() %>
      <tr>
          <td class="small bordered_bottom bordered_right">
            <%= product.gasto.code %>
          </td>

       <td class="small bordered_bottom bordered_right">
            <%= product.gasto.descrip %>
          </td>
          
         <td class="small bordered_bottom bordered_right">
            <%= product.gasto.truck.placa %>
          </td>
       
         <td class="small bordered_bottom bordered_right">
            <%= product.tranportorder.ubication_id %>
          </td>
           <td class="small bordered_bottom bordered_right">
              <%=product.detalle %>
          </td>
          <td class="small bordered_bottom bordered_right">
            <%= money(product.importe) %>
          </td>

      </tr>
    <% end %>
    <tr>
      <td colspan="6" class="bordered_bottom bordered_right">
        &nbsp;
      </td>
    </tr>
    
   
   
  </tbody>
</table>
<br />

<%= hr() %>


<br />


<p>
  <strong>Seller:</strong>
  <%= link_to @lgv.user.username, @lgv.user %>
</p>

<%= hr() %>

<div class="button">
  <%= link_to 'Exportar to PDF', "/customer_payments/pdf/#{@lgv.id}.pdf" %>  
  
 <% if @lgv.processed == "1" %> 

 <% %>

 <% else %>

  <%= link_to 'Procesar', "/lgvs/do_process/#{@lgv.id}" %>

 <% end %> 
  
  <%= link_to 'Regresar', "/companies/lgvs/#{@lgv.company.id}" %>
</div>

