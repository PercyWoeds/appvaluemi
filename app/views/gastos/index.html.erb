<p id="notice"><%= notice %></p>

<h1>Listing Gastos</h1>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Code</th>
      <th>Descrip</th>
      <th>Cuenta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gastos.each do |gasto| %>
      <tr>
        <td><%= gasto.codigo %></td>
        <td><%= gasto.code %></td>
        <td><%= gasto.descrip %></td>
        <td><%= gasto.cuenta %></td>
        <td><%= link_to 'Show', gasto %></td>
        <td><%= link_to 'Edit', edit_gasto_path(gasto) %></td>
        <td><%= link_to 'Destroy', gasto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gasto', new_gasto_path %>

<h2>Importar Archivo "*.csv"</h2>

<%= form_tag import_gastos_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Importar " %>
<% end %>