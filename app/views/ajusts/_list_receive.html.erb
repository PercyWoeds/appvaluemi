<% if @ajusts.count > 0 %>
  <table>
    <thead>
      <tr>
        <th class="bordered_right bordered_bottom" style="width: 100px;">
          Ajuste 
        </th>
        <th class="bordered_right bordered_bottom" style="width: 350px;">
          supplier
        </th>
        <th class="bordered_right bordered_bottom">
          Moneda
        </th>      
        <th class="bordered_right bordered_bottom">
          Total
        </th>
        <th class="bordered_right bordered_bottom">
          Date
        </th>
        <th class="bordered_right bordered_bottom">
          Aprobado 
        </th>
        <th class="bordered_right bordered_bottom" colspan="3">
          Options
        </th>
      </tr>
    </thead>
    <tbody>
    
      <% for ajust in @ajusts %>
        <tr>
          <td class="bordered_right bordered_bottom">
            <%= link_to ajust.code, ajust, :title => "Ir a factura" %>
          </td>
          <td class="bordered_right bordered_bottom">
            <%= link_to ajust.supplier.name, ajust.supplier, :title => "Go to supplier" %>
          </td>
          <td class="bordered_right bordered_bottom right">
            <%= ajust.moneda.symbol %>
          </td>
          
          <td class="bordered_right bordered_bottom right">
            <%= money(ajust.total) %>
          </td>
          <td class="bordered_right bordered_bottom">
            <%= doDate(ajust.created_at) %>
          </td>
          <td class="bordered_right bordered_bottom <%= ajust.processed_color %>">
            <%= ajust.get_processed_short %>
          </td>
          <td class="bordered_right bordered_bottom">
            <%= link_to "Ver", "/ajusts/#{ajust.id}"  %>


          </td>
          
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="error">
    We couldn't <figcaption></figcaption>d any ajusts.
  </p>
<% end %>